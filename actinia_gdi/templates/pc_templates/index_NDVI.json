{
	"id": "index_NDVI",
	"description": "Normalised Difference Vegetation Index (NDVI)",
	"template": {
		"version": "1",
		"list": [
			{
				"module": "r.mapcalc",
				"id": "r.mapcalc_ndvi",
				"comment": "NDVI = ( NIR - RED ) / ( NIR + RED )",
				"inputs": [
					{
						"param": "expression",
						"value": "{{ output }} = float( {{ nir }} - {{ red }} ) / float( {{ nir }} + {{ red }} )"
					}
			  ]
			},
			{
				"module": "r.colors",
				"id": "r.colors_ndvi",
				"inputs":
				[
					{
						"param": "map",
						"value": "{{ output }}"
					},
					{
						"param": "color",
						"value": "ndvi"
					}
				]
			}
		]
	}
}
